{
    "version": 2,
    "buildCommand": "npm run build",
    "outputDirectory": "dist/public",
    "rewrites": [
        {
            "source": "/api/test",
            "destination": "/api/test.js"
        },
        {
            "source": "/api/:path*",
            "destination": "/api/index.mjs"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}