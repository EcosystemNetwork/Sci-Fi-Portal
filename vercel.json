{
    "version": 2,
    "buildCommand": "npm run build",
    "outputDirectory": "dist/public",
    "functions": {
        "api/*.mjs": {
            "includeFiles": "dist/**"
        }
    },
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/api/index.mjs"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}